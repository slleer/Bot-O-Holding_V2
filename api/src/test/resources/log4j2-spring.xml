<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!--
        This is a simple console appender for tests.
        It logs directly to standard output and does not create any files.
        This avoids issues with file paths and unresolved Spring properties during test startup.
        -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!--
        Set the root logger level to "info" for tests.
        You can change this to "debug" for more verbose test logging.
        -->
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
